<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.dok.chabadabada.activities.MainActivity"
	android:background="@color/background">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/team1"
		android:id="@+id/team1Txt"
		android:layout_alignBottom="@+id/team1Name"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/team2"
		android:id="@+id/team2Txt"
		android:layout_below="@+id/team1Txt"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginTop="34dp"/>



	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/newGame"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:background="@color/holoPurple"
		android:textColor="@android:color/white"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:id="@+id/newGameButton"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"
        android:id="@+id/view"
        android:layout_above="@id/newGameButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:inputType="textPersonName"
		android:text="Name"
		android:ems="10"
		android:id="@+id/team1Name"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:inputType="textPersonName"
		android:text="Name"
		android:ems="10"
		android:id="@+id/team2Name"
		android:layout_alignBottom="@+id/team2Txt"
		android:layout_alignLeft="@+id/team1Name"
		android:layout_alignStart="@+id/team1Name"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/teamName"
		android:layout_below="@+id/team2Txt"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginTop="35dp"
		android:text="@string/time"/>


</RelativeLayout>
